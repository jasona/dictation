{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vozr",
  "version": "0.1.0",
  "identifier": "com.jason.vozr",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Vozr",
        "visible": false,
        "width": 800,
        "height": 600
      },
      {
        "label": "pill",
        "title": "",
        "url": "/pill",
        "width": 320,
        "height": 80,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "visible": false,
        "center": true
      },
      {
        "label": "settings",
        "title": "Vozr Settings",
        "url": "/settings",
        "width": 480,
        "height": 640,
        "resizable": true,
        "visible": false,
        "center": true
      },
      {
        "label": "onboarding",
        "title": "Welcome to Vozr",
        "url": "/onboarding",
        "width": 520,
        "height": 600,
        "resizable": false,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Jason Alexander",
    "windows": {
      "nsis": {
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null
      }
    }
  }
}
